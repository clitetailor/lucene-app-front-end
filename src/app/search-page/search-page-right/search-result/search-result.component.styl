@import '../../../px-to-vw.styl';

$content-width = $(16px) * 6 + $(188px) * 2 + $(182px);

.search-result {
  width: 100%;
  height: 100%;

  .no-result {
    width: 100%;
    height: 100%;

    display: flex;
    justify-content: center;
    align-items: center;

    b {
      font-family: Lato;
      font-size: $(16px);

      color: #303030;
    }
  }

  .results {
    .result-page {
      display: flex;
      flex-flow: column nowrap;
      align-items: center;

      * {
        width: $content-width;
      }

      .page-title h2 {
        font-family: Lato;
        font-size: $(18.75px);

        margin: $(3px) 0;
      }

      .page-preview-content p {
        font-family: Lato;
        font-size: $(16px);
      }
    }
  }
}
