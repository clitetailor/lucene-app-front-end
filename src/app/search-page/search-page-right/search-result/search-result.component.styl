@import '../../../px-to-vw.styl';

$content-width = $(16px) * 6 + $(188px) * 2 + $(182px);

.search-result {
  width: 100%;
  height: 100%;

  .no-result {
    width: 100%;
    height: 100%;

    display: flex;
    justify-content: center;
    align-items: center;

    b {
      font-family: Lato;
      font-size: $(16px);

      color: #303030;
    }
  }

  .results {
    max-height: 100%;
    max-width: 100%;

    flex: 1 1 auto;
    overflow: auto;

    .result-item {
      display: flex;
      flex-flow: column nowrap;

      align-items: center;
      justify-content: flex-start;

      .content {
        max-width: $content-width;

        text-overflow: ellipsis;

        cursor: pointer;

        p, h2 {
          font-family: Lato;
        }

        h2 {
          font-size: $(18.75px);
          font-weight: bold;
        }

        p {
          font-size: $(16px);
        }

        p::after {
          content: "...";

          display: inline;
        }

        h2, p {
          display: -webkit-box;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 5;

          text-overflow: ellipsis;
          overflow: hidden;

          white-space: pre-line;
        }
      }
    }
  }
}
