.search-bar {
  display: flex;
  justify-content: center;

  width: 100%;
  height: $(91px);

  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);

}

.search-input-width {
  display: flex;
  align-items: center;
  width: $content-width;
}


.search-icon {
  display: flex;
  height: 100%;
  margin-right: $(10px);

  align-items: center;

  &::after {
    content: 'search';

    font-family: Material Icons;
    font-size: $(24px);

    color: #303030;
  }
}

.search-input-text {
  $input-style() {
    font-family: Lato;
    font-size: $(24px);
    color: #303030;
  }

  input {
    height: 100%;

    border: none;
    outline: none;
    box-shadow: none;

    $input-style();

    background: none;
    z-index: 3;
  }

  &::after {
    content: attr(title);

    display: block;
    position: absolute;

    $input-style();

    color: transparent;
    text-shadow: 0 0 0 alpha(#303030, 0.5);

    z-index: 2;
  }
}
