@import '../../px-to-vw.styl';

$content-width = $(16px) * 6 + $(188px) * 2 + $(182px);

.right-wrapper {
  display: flex;
  flex-flow: column nowrap;
  align-items: stretch;

  width: 100%;
  height: 100%;

  .active {
    transition: width 0.2s ease-out;
  }

  .search-bar {
    display: flex;
    justify-content: center;

    width: 100%;
    height: $(72px);

    .search-input-width {
      display: flex;
      justify-content: flex-start;
      align-items: stretch;

      position: relative;

      width: $content-width;
    }

    .slider {
      display: flex;
      justify-content: flex-end;

      width: 100%;

      overflow: hidden;

      &.active {
        width: 0%;
      }

      nav {
        display: flex;
        justify-content: flex-end;

        right: $(20px);
        top: 0;
        bottom: 0;
        height: 100%;

        .tab {
          display: flex;
          align-items: center;
          padding: $(16px);

          position: relative;

          height: 100%;

          font-family: Lato;
          font-size: $(16px);
          color: #303030;

          outline: none;
          border: none;
          box-shadow: none;

          cursor: pointer;

          &:last-child {
            margin-right: $(30px);
          }

          &:after {
            content: '';
            display: block;

            position: absolute;
            bottom: $(5px);
            left: $(18px);
            right: $(18px);

            height: $(2px);
          }

          &:hover:after {
            background: dodgerblue;
          }
        }
      }
    }

    .search-icon {
      display: flex;
      align-items: center;
      flex: 0 0 auto;
      height: 100%;
      margin-right: $(10px);

      cursor: pointer;

      &::after {
        content: 'search';

        font-family: Material Icons;
        font-size: $(18.75px);

        color: #303030;
      }
    }

    .search-input-text {
      display: flex;

      flex: 1 1 auto;
      width: 0%;
      height: 100%;

      position: relative;

      overflow: hidden;

      $input-style() {
        font-family: Lato;
        font-size: $(18.75px);
        color: #303030;
      }

      input {
        flex: 1 1 auto;

        height: 100%;
        width: 100%;

        border: none;
        outline: none;
        box-shadow: none;

        $input-style();

        background: none;
        z-index: 3;
      }

      &::before {
        content: attr(data-snippet);

        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;

        position: absolute;

        $input-style();

        position: absolute;

        color: transparent;
        text-shadow: 0 0 0 alpha(#303030, 0.5);

        overflow: hidden;
        z-index: 2;
      }

      &.active {
        width: 100%;
      }


      .close-icon {
        display: flex;
        align-items: center;
        flex: 0 0 auto;
        height: 100%;

        cursor: pointer;

        z-index: 3;

        &::after {
          content: 'close';

          font-family: Material Icons;
          font-size: $(18.75px);

          color: #303030;
        }
      }
    }
  }

  .content {
    width: 100%;
    height: 100%;
  }
}
