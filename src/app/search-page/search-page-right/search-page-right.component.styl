@import '../../px-to-vw.styl';

$content-width = $(16px) * 6 + $(188px) * 2 + $(182px);

.right-wrapper {
  display: flex;
  flex-flow: column nowrap;
  align-items: stretch;

  .search {
    transition: width 0.2s ease-out;
  }

  .search-bar {
    display: flex;
    justify-content: center;

    width: 100%;
    height: $(72px);

    .search-input-width {
      display: flex;
      justify-content: flex-start;
      align-items: stretch;
      width: $content-width;
    }

    .slider {
      width: 100%;

      &.search {
        width: 0%;
      }
    }

    .search-icon {
      display: flex;
      align-items: center;
      flex: 0 0 auto;
      height: 100%;
      margin-right: $(10px);

      cursor: pointer;

      &::after {
        content: 'search';

        font-family: Material Icons;
        font-size: $(18.75px);

        color: #303030;
      }
    }

    .search-input-text {
      flex: 1 1 auto;
      width: 0%;
      height: 100%;

      overflow: hidden;

      $input-style() {
        font-family: Lato;
        font-size: $(18.75px);
        color: #303030;
      }

      input {
        height: 100%;
        width: 100%;

        border: none;
        outline: none;
        box-shadow: none;

        $input-style();

        background: none;
        z-index: 3;
      }

      &::after {
        content: attr(title);

        display: block;
        position: absolute;

        $input-style();

        color: transparent;
        text-shadow: 0 0 0 alpha(#303030, 0.5);

        z-index: 2;
      }

      &.search {
        width: 100%;
      }
    }
  }

  .content {
    flex: 1 1 auto;
  }
}
